package ie.gmit.sw;

import java.io.File;
import java.util.*;
import java.util.concurrent.*;

public class SubjectFileProcess {
	private BlockingQueue<Shingle> queue;
	private ExecutorService pool;
	private int fileCount;
	private List<ConcurrentHashMap<String, Integer>> mapList;
	private List<String> filesList;
	
	public SubjectFileProcess(List<String> filesList) {
		super();
		this.filesList=filesList;
	}

	public List<ConcurrentHashMap<String, Integer>> readSubjectFolder(String folderName,int queueSize,int poolSize)
			throws InterruptedException, ExecutionException {
		mapList=new ArrayList<ConcurrentHashMap<String, Integer>>();
		filesList=new ArrayList<String>();
		queue = new ArrayBlockingQueue<>(queueSize);
		pool = Executors.newFixedThreadPool(poolSize);
		File folder = new File(folderName);
		String[] files = folder.list();
		fileCount = files.length;
		Future<List<ConcurrentHashMap<String, Integer>>> list = pool.submit(new SubjectShingleTaker(queue, fileCount));
		for (String s : files) {
			pool.submit(new QueryFileParser(queue, folderName + "/" + s));
			filesList.add(s);
			Thread.sleep(10);
		}
		this.mapList = list.get();
		pool.shutdown();
		return mapList;
	}
	
	public List<String> getList(){
		return filesList;
	}
}